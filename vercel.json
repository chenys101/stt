{
  "version": 2,
  "builds": [
    {
      "src": "backend/cmd/main.go",
      "use": "@vercel/go",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/cmd/main.go"
    },
    {
      "source": "/(.*)",
      "destination": "/ui/$1"
    }
  ]
}
